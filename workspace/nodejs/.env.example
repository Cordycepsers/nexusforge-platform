# ============================================
# NexusForge Platform - Environment Variables
# ============================================

# Application
NODE_ENV=development
APP_NAME=NexusForge Node.js Service
APP_VERSION=1.0.0
PORT=3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://nexusforge:secure_password@localhost:5432/nexusforge_dev

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=30m
JWT_REFRESH_EXPIRES_IN=7d

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1
BCRYPT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=3000

# External Services
EXTERNAL_API_URL=https://api.example.com
EXTERNAL_API_KEY=

# Feature Flags
ENABLE_CACHE=true
ENABLE_SWAGGER=true

# Cloud Configuration (GCP)
GCP_PROJECT_ID=your-project-id
GCP_BUCKET_NAME=your-bucket-name
GCP_CREDENTIALS_PATH=/path/to/credentials.json
