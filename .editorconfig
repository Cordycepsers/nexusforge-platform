# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Shell scripts
[*.sh]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Makefile
[Makefile]
indent_style = tab

# SQL files
[*.sql]
indent_size = 2

# Dockerfile
[Dockerfile*]
indent_size = 2

# Docker Compose
[docker-compose*.yml]
indent_size = 2

# TypeScript/JavaScript
[*.{ts,tsx,js,jsx}]
indent_size = 2

# HTML
[*.html]
indent_size = 2

# CSS/SCSS
[*.{css,scss,sass}]
indent_size = 2

# Configuration files
[*.{toml,ini,cfg,conf}]
indent_size = 2

# Package files
[{package.json,package-lock.json}]
indent_size = 2

# Terraform
[*.tf]
indent_size = 2

# Proto files
[*.proto]
indent_size = 2
